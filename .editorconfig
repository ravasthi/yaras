# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py}]
indent_size = 4

[*.{js,jsx,rb}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{css,less,scss}]
indent_size = 2

[*.{html,dust}]
indent_size = 2
